   <children>
      <Label fx:id="inGamePlayerName" text="Player Name" textFill="WHITE">
         <font>
            <Font name="Borel Regular" size="36.0" />
         </font>
         <effect>
            <DropShadow color="#f942ff" />
         </effect>
      </Label>
      <Label fx:id="inGamePlayerScore" text="100" textFill="WHITE">
         <font>
            <Font name="Borel Regular" size="36.0" />
         </font>
         <effect>
            <DropShadow color="#f942ff" />
         </effect>
      </Label>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets left="24.0" right="24.0" />
   </padding>
   <effect>
      <DropShadow color="#f942ff" />
   </effect>
</HBox>
