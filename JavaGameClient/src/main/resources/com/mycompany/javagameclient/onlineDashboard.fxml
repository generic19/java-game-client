<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #36263D;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javagameclient.OnlineDashboardController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Label fx:id="labelPlayerName" text="Player Name" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Borel Regular" size="36.0" />
               </font>
               <effect>
                  <DropShadow color="#00e5ff" />
               </effect>
            </Label>
         </left>
         <right>
            <Label fx:id="labelScore" style="-fx-border-color: #FFE2FF; -fx-border-radius: 60; -fx-border-width: 5;" text="Score: 0" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Borel Regular" size="36.0" />
               </font>
               <effect>
                  <DropShadow color="#00e5ff" />
               </effect>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </Label>
         </right>
         <bottom>
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Search" style="-fx-background-color: transparent; -fx-font-family: Borel; -fx-font-size: 24; -fx-border-color: transparent; -fx-background-image: url('..\icons\search.png'); -fx-prompt-text-fill: white;" BorderPane.alignment="CENTER">
               <effect>
                  <DropShadow color="#00e5ff" />
               </effect>
            </TextField>
         </bottom>
      </BorderPane>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label text="Available Players" textFill="WHITE">
                     <font>
                        <Font name="Borel Regular" size="36.0" />
                     </font>
                     <effect>
                        <DropShadow color="#00e5ff" />
                     </effect>
                  </Label>
                  <ScrollPane prefHeight="329.0" prefWidth="678.0" style="-fx-background: none; -fx-border-color: none;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="availablePlayersList" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefWidth="402.0">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label text="InGame" textFill="WHITE">
                     <font>
                        <Font name="Borel Regular" size="36.0" />
                     </font>
                     <effect>
                        <DropShadow color="#f942ff" />
                     </effect>
                  </Label>
                  <ScrollPane prefHeight="500.0" prefWidth="402.0" style="-fx-background: none; -fx-border-color: none;" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="inGamePlayersList" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </right>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button mnemonicParsing="false" onAction="#onLogoutClicked" style="-fx-background-color: none; -fx-border-color: white; -fx-font-size: 40; -fx-border-width: 3; -fx-border-radius: 60; -fx-text-fill: white; -fx-font-family: Brawler;" text="Logout" BorderPane.alignment="CENTER">
            <effect>
                  <DropShadow color="#f942ff" />
               </effect>
               </Button>
         </right>
         <left>
             
                  <Button mnemonicParsing="false" onAction="#onBackClicked" prefHeight="71.0" prefWidth="152.0" style="-fx-background-color: none; -fx-border-color: white; -fx-font-size: 40; -fx-border-width: 3; -fx-border-radius: 60; -fx-text-fill: white;" text="Back" BorderPane.alignment="CENTER">
                <effect>
                  <DropShadow color="#f942ff" />
               </effect>
               </Button>
         </left>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </BorderPane>
   </bottom>
</BorderPane>
